<?xml version="1.0"?>
<robot name="bottle">
  <!-- Main body -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="4.0" radius="0.6"/>
      </geometry>
      <origin xyz="0 0 -1.5" rpy="0 0 0"/>  <!-- Changed from -0.625 to -1.5 -->
      <material name="clear_blue">
        <color rgba="0.7 0.8 0.9 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="4.0" radius="0.6"/>
      </geometry>
      <origin xyz="0 0 -1.5" rpy="0 0 0"/>  <!-- Changed from -0.625 to -1.5 -->
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 -1.5"/>  <!-- Changed from -0.625 to -1.5 -->
      <inertia 
        ixx="0.68" ixy="0.0" ixz="0.0"
        iyy="0.68" iyz="0.0"
        izz="0.09"/>
    </inertial>
  </link>
  
  <!-- Neck -->
  <link name="neck">
    <visual>
      <geometry>
        <cylinder length="1.0" radius="0.25"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <material name="clear_blue">
        <color rgba="0.7 0.8 0.9 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1.0" radius="0.25"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0.5"/>
      <inertia 
        ixx="0.0045" ixy="0.0" ixz="0.0"
        iyy="0.0045" iyz="0.0"
        izz="0.0015"/>
    </inertial>
  </link>
  
  <!-- Cap -->
  <link name="cap">
    <visual>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="white">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0.125"/>
      <inertia 
        ixx="0.0005" ixy="0.0" ixz="0.0"
        iyy="0.0005" iyz="0.0"
        izz="0.001"/>
    </inertial>
  </link>
  
  <joint name="body_to_neck" type="fixed">
    <parent link="base_link"/>
    <child link="neck"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>  <!-- Changed from 1.375 to 0.5 -->
  </joint>
  
  <joint name="neck_to_cap" type="fixed">
    <parent link="neck"/>
    <child link="cap"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
  </joint>
</robot>