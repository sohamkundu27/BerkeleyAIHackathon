<?xml version="1.0"?>
<robot name="hammer">

  <!-- Handle -->
  <link name="handle">
    <visual>
      <geometry>
        <cylinder length="6.0" radius="0.3"/>
      </geometry>
      <origin xyz="0 0 -2.0" rpy="0 0 0"/>  <!-- Shifted handle down by 2.0 -->
      <material name="brown">
        <color rgba="0.4 0.2 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="6.0" radius="0.3"/>
      </geometry>
      <origin xyz="0 0 -2.0" rpy="0 0 0"/>  <!-- Shifted handle down by 2.0 -->
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 -2.0"/>  <!-- Shifted handle down by 2.0 -->
      <inertia 
        ixx="1.5075" ixy="0.0" ixz="0.0"
        iyy="1.5075" iyz="0.0"
        izz="0.0225"/>
    </inertial>
  </link>

  <!-- Head -->
  <link name="head">
    <visual>
      <geometry>
        <box size="2.0 0.6 0.6"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="2.0 0.6 0.6"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia 
        ixx="0.336" ixy="0.0" ixz="0.0"
        iyy="0.336" iyz="0.0"
        izz="0.036"/>
    </inertial>
  </link>

  <!-- Fixed joint between handle and head -->
  <joint name="handle_to_head" type="fixed">
    <parent link="handle"/>
    <child link="head"/>
    <origin xyz="0 0 1.3" rpy="0 0 0"/>  <!-- Adjusted to maintain proper head position -->
  </joint>

</robot>