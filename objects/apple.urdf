<?xml version="1.0"?>
<robot name="apple">
  <link name="base_link">
    <visual>
      <geometry>
        <sphere radius="1.5"/>
      </geometry>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
      <material name="red">
        <color rgba="0.8 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="1.5"/>
      </geometry>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 1.5"/>
      <inertia 
        ixx="0.18" ixy="0.0" ixz="0.0"
        iyy="0.18" iyz="0.0"
        izz="0.18"/>
    </inertial>
  </link>
  
  <!-- Stem -->
    <!-- Stem - More prominent version -->
  <link name="stem">
    <visual>
      <geometry>
        <cylinder length="0.8" radius="0.15"/>  <!-- Increased from 0.5 length and 0.1 radius -->
      </geometry>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>  <!-- Adjusted for longer length -->
      <material name="dark_brown">
        <color rgba="0.3 0.15 0.05 1.0"/>  <!-- Darker brown for more contrast -->
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.8" radius="0.15"/>
      </geometry>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0.4"/>
      <inertia 
        ixx="0.0005" ixy="0.0" ixz="0.0"
        iyy="0.0005" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="apple_to_stem" type="fixed">
    <parent link="base_link"/>
    <child link="stem"/>
    <origin xyz="0 0 1.45" rpy="0 0.1 0"/>  <!-- Slight tilt for realism -->
  </joint>
</robot>